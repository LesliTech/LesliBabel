<p id="notice"><%= notice %></p>

<h1>Bucket Discussions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bucket_discussions.each do |bucket_discussion| %>
      <tr>
        <td><%= link_to 'Show', bucket_discussion %></td>
        <td><%= link_to 'Edit', edit_bucket_discussion_path(bucket_discussion) %></td>
        <td><%= link_to 'Destroy', bucket_discussion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

