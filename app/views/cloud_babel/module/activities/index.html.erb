<h1>Module Activities</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @module_activities.each do |module_activity| %>
      <tr>
        <td><%= link_to 'Show', module_activity %></td>
        <td><%= link_to 'Edit', edit_module_activity_path(module_activity) %></td>
        <td><%= link_to 'Destroy', module_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

