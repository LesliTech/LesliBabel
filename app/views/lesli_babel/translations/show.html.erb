<%= render(LesliView::Layout::Container.new("babel-translations-show")) do %>
    
    <%= render(LesliView::Components::Header.new("My label", :back => translations_path)) %>

    <%= form_with(model: @string, :html => { :class => 'box' }, builder: LesliView::Forms::BuilderHorizontal) do |form| %>

        <% I18n.available_locales.each do |locale| %>
            <%= form.field(locale, label:language_name(locale)) %>
        <% end %>

        <%= form.field(:context) %>
        <%= form.field(:status) %>
        <%= form.field(:path) %>
        <%= form.submit %>

    <% end %>

    <%#= dd(@string) %>
<% end %>
